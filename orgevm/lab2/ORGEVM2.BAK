#include <conio.h>
#include <dos.h>
void scroll (){
	union REGS r;
	r.h.ah = 7;
	r.h.al = 3;
	r.h.ch =  14; r.h.cl= 14; r.h.dh = 19; r.h.dl= 64;
	r.h.bh = 0;
	int86(0x10,&r,&r);
}

int main() {
    int text, back, count = 5;
    char color_name[16][20] = {"BLACK","BLUE","GREEN","CYAN","RED","MAGENTA","BROWN","LIGHTGRAY","DARKGRAY","LIGHTBLUE","LIGHTGREEN","LIGHTCYAN","LIGHTRED","LIGHTMAGENTA","YELLOW","WHITE"};
    clrscr();
    window(15, 15, 65, 20);
    gotoxy(1, count);
	clrscr();
    for (back = 0; back < 8; back++) {
		textbackground(back);
		for (text = 0; text < 16; text++) {
			textcolor(text);
			if (count == 0){
				scroll();
				gotoxy(1,3);
				count = 3;
				delay(200);
			}
			cprintf("text: %d, background: %s", text, color_name[back]);
			count--;
			gotoxy(1, count);
			delay(200);
		}
    }
    getch();
    return 0;
}